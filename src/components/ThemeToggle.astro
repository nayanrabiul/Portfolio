---

<div class="flex justify-end items-center fixed top-4 right-3 z-50">
    <span class="text-sm mr-2 hidden md:block">Theme</span>
    <select
        id="theme-toggle"
        onchange="onchange"
        class="bg-white text-black border border-black rounded-md p-1 text-md"
    >
        <option disabled value=""> Pick a theme</option>
        {
            themes.map((theme) => {
                return <option value={theme}>{theme}</option>;
            })
        }
    </select>
</div>

<script is:inline>
let select = document.getElementById("theme-toggle");

//onchange printing the value of the selected option
select.onchange = function () {
    let theme = select.options[select.selectedIndex].value;
    console.log(theme);
    document.documentElement.setAttribute("data-theme", theme);
    localStorage.setItem("theme", theme);
};

//getting the value of the theme from local storage
document.getElementById("theme-toggle").value = theme;
</script>
